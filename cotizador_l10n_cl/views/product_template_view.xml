<odoo>
    <data>
        <record id="view_product_template_form_list_parametros" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"></field>
            <field name="arch" type="xml">

	        <xpath expr="//notebook" position="inside">
                    <page string="Parámetros Creación" attrs="{'invisible':[('gen_cotizador','=',False)]}">
                        <group name="product_params" string="Parámetros">
		        <div class="row" style="width:100%;margin-left:20px">
			    <field name="gen_cotizador" invisible="1"/>
			    <field name="lista_parametros" widget="widget_parametros" nolabel="1"/>
		        </div>
			</group>
		    </page>
		</xpath>

	        <xpath expr="//label[@for='weight']" position="before">
		    <field name="largo_ancho_category_uom_id" invisible='1'/>
		    <label for="largo" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
                        <field name="largo"/><span><field name="largo_uom_id" domain="[('category_id','=',largo_ancho_category_uom_id)]"/></span>
                    </div>
		    <label for="ancho" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"/>
                    <div class="o_row" attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}">
			    <field name="ancho"/><span><field name="ancho_uom_id" domain="[('category_id','=',largo_ancho_category_uom_id)]"/></span>
                    </div>
		</xpath>

	    </field>
        </record>
    </data>
</odoo>

