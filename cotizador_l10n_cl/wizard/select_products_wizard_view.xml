<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_select_products_form" model="ir.ui.view">
        <field name="name">select.products.form</field>
        <field name="model">select.products</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Configura Producto">
	    <sheet name="product_form">
	        <div class="oe_title">
                    <label for="nombre_producto" string="Nombre Producto"/>
                    <h2>
                        <div class="d-flex">
                            <field name="nombre_producto" readonly="1" placeholder="Nombre Producto"/>
                        </div>
                    </h2>
                    <label for="codigo" string="Código"/>
                    <h2>
                        <div class="row">
                            <div class="col">
                                <field name="codigo" readonly="1" placeholder="Código"/>-NNNNN
			    </div>
                            <div class="col">
				    <button name="web.action_report_layout_preview" type="action" class="oe_link" icon="fa-arrow-right">
				        <field name="count_coincidencias" nolabel="1" readonly="1" placeholder="Nombre Producto"/><span> coincidencia(s)</span>
				    </button>
			    </div>
                        </div>
                    </h2>
		</div>

                <group>
                    <group>
                        <field name="producto_id" />
                        <field name="codigo_producto" invisible="1"/>
                        <field name="use_aisa" invisible='1'/>
                        <field name="use_bujes" invisible='1'/>
                        <field name="use_tabla_troquel" invisible='1'/>
                        <field name="use_cortes" invisible='1'/>
                        <field name="use_cuatricomia" invisible='1'/>
                        <field name="use_adhesivo" invisible='1'/>
		        <field name="domain_lista_adicionales_ids" invisible='1'/>
		        <field name="domain_adicional_ids" invisible='1'/>
		        <field name="count_lista_adicionales_ids" invisible='1'/>
		        <field name="count_adicional_ids" invisible='1'/>
		        <field name="domain_hoja_ids" invisible='1'/>
			<field name="sustrato_id" />
                        <field name="texto_adicional" placeholder="Texto Adicional"/>

			<label for="cantidad" string="Cantidad" />
			<div class="o_row" id="cantidad_uom" >
                            <field name="cantidad" />
                            <field name="product_uom_id" nolabel="1"/>
                        </div>

			<field name="hoja_id" domain="[('id','in',domain_hoja_ids)]" attrs="{'invisible':['|',('producto_id','=',False),('use_cortes','=',True)],'required':[('use_cortes','=',False)]}"/>

			<field name="area_ocupada" />
                        <field name="merma_estimada"/>
			<field name="area_ocupada_con_merma" />
			<!--
                        <field name="merma_estimada" widget="percentage"/>
			-->
                    </group>
                    <group>
		        <!-- Ingresa o selecciona largo/ancho -->
			<label for="select_largo" string="Avance X Ancho" attrs="{'invisible':[('use_tabla_troquel','=',False)]}"/>
			<div class="o_row" id="select_troquel" attrs="{'invisible':[('use_tabla_troquel','=',False)]}">
		            <field name="select_largo" domain="[('producto_id','=',producto_id)]" />
                            <span><field name="uom_id" readonly="1" nolabel="1"/></span>
                        </div>

			<label for="largo" string="Avance X Ancho" attrs="{'invisible':[('use_tabla_troquel','=',True)]}"/>
			<div class="o_row" id="largo_ancho" attrs="{'invisible':[('use_tabla_troquel','=',True)]}">
                            <field name="largo" />X<field name="ancho" />
                            <span><field name="uom_id" readonly="1" nolabel="1"/></span>
                        </div>

			<field name="adhesivo_id" attrs="{'invisible':[('use_adhesivo','=',False)]}"/>
			<field name="adhesivo_str" string="Adhesivo" attrs="{'invisible':[('use_adhesivo','=',True)]}" readonly="1"/>

			<field name="currency_id" invisible='1'/>
                        <field name="use_tinta_blanca" invisible='1'/>
                        <!-- Cobertura tinta blanca Jetrion -->
			<label for="use_cobertura_tinta" attrs="{'invisible':[('use_tinta_blanca','=',False)]}" string="Cobertura Tinta Blanca" />
			<div class="o_row" id="tinta_cobertura" >
                            <field name="use_cobertura_tinta" attrs="{'invisible':[('use_tinta_blanca','=',False)]}"/>
			    <field name="cobertura_tinta" attrs="{'invisible':['|',('use_tinta_blanca','=',False),('use_cobertura_tinta','=',False)]}"/>
                        </div>

			<field name="precio_total" string='COSTO TOTAL ($)'/>
			<field name="precio_unitario" string='COSTO UNITARIO ($)' widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="datos_adicionales" />
                    </group>
                </group>
		<notebook>
		    <page string="General" name="general_information">
			<group>
			<div class='row' style="padding-left:20px">
			    <div class="col-6">
			        <group string="ADICIONALES" attrs="{'invisible':[('count_adicional_ids','=',0)]}">
                                    <field name="adicional_ids" nolabel="1" domain="[('id','in',domain_adicional_ids)]" widget="many2many_tags"/>
			        </group>
			        <group string="VALORES ADICIONALES" attrs="{'invisible':[('count_lista_adicionales_ids','=',0)]}">
				<div>
				    <div class="row">
				        <field name="lista_adicionales_ids" nolabel='1'>
					    <tree editable="bottom">
                                                <field name="add_data" invisible='1'/>
                                                <field name="tipo_data" invisible='1'/>
                                                <field name="adicional_id" domain="[('id','in',parent.domain_lista_adicionales_ids)]"/>
                                                <field name="name" invisible='1'/>
                                                <field name="texto"/>
						<field name="data_text" attrs="{'required':[('add_data','=',True)], 'readonly':[('add_data','=',False)]}"/>
                                            </tree>
	                                </field>
			            </div>
			        </div>
			        </group>
				<!--
                                <field name="adicional_ids"  widget="many2many_tags" />
                                <field name="rotulado_embalaje" />
                                <field name="efecto_espejo" />
                                <field name="laminado" />
                                <field name="folia" />
				-->
		            </div>
			    <div class="col-6">
			        <group string="BUJE" attrs="{'invisible':[('use_bujes','!=',True)]}">
                                    <field name="buje_id" attrs="{'required':[('use_bujes','=',True)]}"/>
                                    <field name="salidas_x_rollo" attrs="{'required':[('use_bujes','=',True)]}"/>
                                    <field name="etiquetas_x_rollo" readonly='1'/>
			        </group>
			        <group string="AISA" attrs="{'invisible':[('use_aisa','=',False)]}">
				<div>
			            <div class="row">
				        <label for="indica_aisa" string="Indica AISA?" />
                                        <field string='Indica AISA?' name="indica_aisa" />
				    </div>
			            <div class="row" attrs="{'invisible':[('indica_aisa','!=',True)]}">
				        <field class="d-flex flex-wrap" name="aisa_id" nolabel='1' widget="radio_image_aisa" options="{'horizontal': true}"/>
			            </div>
			        </div>
			        </group>
		            </div>
		        </div>
		        </group>
		    </page>
		    <page string="Materias Primas" name="insumos">
			<group>
			    <field name="insumo_ids" nolabel="1" readonly='1'>
		                <tree options="{'no_create': True}">
                                    <field name="product_product_id" invisible="1"/>
				    <field name="name" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="cantidad"/>
                                    <field name="uom_id" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="costo_unitario" invisible="1"/>
                                    <field name="costo_consumo" attrs="{'readonly': [('product_product_id','!=',False)]}" sum="Costo Total"/>
                                    <field name="merma" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="incluido_en_ldm" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="flag_adicional" invisible="1"/>
                                </tree>
	                    </field>


		        </group>
		    </page>
		    <page string="Cálculo de parámetros" attrs="{'invisible':[('codigo_producto','!=','ETB'),('codigo_producto','!=','EF')]}">
		        <group>
		            <group>
                                <field name="engranaje" readonly='1'/>
				<field name="etiquetas_al_desarrollo" attrs="{'readonly':[('use_tabla_troquel','=',True)]}"/>
                                <field name="etiquetas_al_ancho" attrs="{'readonly':[('use_tabla_troquel','=',True)]}"/>
                                <field name="gap" attrs="{'invisible':[('use_tabla_troquel','=',True)]}"/>
			    </group>
		            <group>
                                <field name="z_calculado" attrs="{'invisible':[('use_tabla_troquel','=',True)]}"/>
				<field name="z_ingreso" string="Z" />
                                <field name="gap_etiqueta" attrs="{'readonly':[('use_tabla_troquel','=',True)]}"/>
                                <field name="etiqueta_con_gap"/>

				<label for="ss" string="SS / SX / RF" />
			        <div class="o_row" id="ancho_ss_sx" >
					<field name="ss" style="max-width:20px"/> / <field name="sx" style="max-width:20px"/> / <field name="rf" style="max-width:20px" readonly="1"/>
                                </div>
                                <field name="ancho_bobina"/>
                                <field name="ancho_papel" readonly='1'/>
                                <field name="longitud_papel"/>
		            </group>
		        </group>
		    </page>
		    <page string="Cálculo de parámetros" attrs="{'invisible':[('codigo_producto','!=','EDJ')]}">
		        <group>
		            <group>
                                <field name="ancho_papel" readonly='1'/>
                                <field name="etiquetas_al_ancho" readonly='1'/>
                                <field name="gap_etiqueta" string="Gap" readonly='1'/>
			    </group>
		            <group>
                                <field name="longitud_papel"/>
			    </group>
			</group>
		    </page>
		    <page string="Colores" attrs="{'invisible':[('use_cuatricomia','=',False)]}">
		    <div class="row">
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_mate">
			        </div>
			        <div class="o_tinta_text">Barniz</div>
		            </div> 
			    <div class="o_tinta_checkbox"><field name="use_barniz" readonly='1' nolabel='1'/></div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_cyan">
			        </div>
			        <div class="o_tinta_text">C</div>
		            </div> 
			    <div class="o_tinta_checkbox"><field name="use_cyan" nolabel='1'/></div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_magenta">
			        </div>
			        <div class="o_tinta_text">M</div>
		            </div> 
			    <div class="o_tinta_checkbox"><field name="use_magenta" nolabel='1'/></div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_yellow">
			        </div>
			        <div class="o_tinta_text">Y</div>
		            </div> 
			    <div class="o_tinta_checkbox"><field name="use_yellow" nolabel='1'/></div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_black">
			        </div>
			        <div class="o_tinta_text">K</div>
		            </div> 
			    <div class="o_tinta_checkbox"><field name="use_black" nolabel='1'/></div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_white">
			        </div>
			        <div class="o_tinta_text">C1</div>
		            </div> 
			    <div class="o_tinta_checkbox">
			        <field name="use_color1" nolabel='1'/>
			        <field name="color1" nolabel='1' placeholder="Color?" attrs="{'invisible':[('use_color1','=',False)], 'required':[('use_color1','=',True)]}"/>
			    </div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_white">
			        </div>
			        <div class="o_tinta_text">C2</div>
		            </div> 
			    <div class="o_tinta_checkbox">
			        <field name="use_color2" nolabel='1'/>
			        <field name="color2" nolabel='1' placeholder="Color?" attrs="{'invisible':[('use_color2','=',False)], 'required':[('use_color2','=',True)]}"/>
			    </div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_white">
			        </div>
			        <div class="o_tinta_text">C3</div>
		            </div> 
			    <div class="o_tinta_checkbox">
			        <field name="use_color3" nolabel='1'/>
			        <field name="color3" nolabel='1' placeholder="Color?" attrs="{'invisible':[('use_color3','=',False)], 'required':[('use_color3','=',True)]}"/>
			    </div> 
		        </div>
			<div>
		            <div class="o_tinta">
			        <div class="o_tinta_detalle o_tinta_white">
			        </div>
			        <div class="o_tinta_text">C4</div>
		            </div> 
			    <div class="o_tinta_checkbox">
			        <field name="use_color4" nolabel='1'/>
			        <field name="color4" nolabel='1' placeholder="Color?" attrs="{'invisible':[('use_color4','=',False)], 'required':[('use_color4','=',True)]}"/>
			    </div> 
		        </div>
		    </div>
		    </page>
		    <page string="Cálculo de parámetros" attrs="{'invisible':[('codigo_producto','!=','EIMTTR'),('codigo_producto','!=','EDP'),('codigo_producto','!=','DPVC')]}">
		        <group>
		            <group>
                                <field name="etiquetas_al_ancho"/>
                                <field name="gap"/>
			    </group>
		            <group>
                                <field name="etiqueta_con_gap"/>
				<label for="ss" string="SS / SX / RF" />
			        <div class="o_row" id="ancho_ss_sx" >
					<field name="ss" style="max-width:20px"/> / <field name="sx" style="max-width:20px"/> / <field name="rf" style="max-width:20px" readonly="1"/>
                                </div>
                                <field name="ancho_bobina" string="Ancho Calculado"/>
                                <field name="ancho_papel" readonly='1'/>
                                <field name="longitud_papel"/>
			    </group>
			</group>
		    </page>
		    <!-- RICHO -->
		    <page string="Cálculo de parámetros" attrs="{'invisible':[('codigo_producto','!=','IMD'),('codigo_producto','!=','IMDP')]}">
		        <group>
		            <group>
				<field name="rota_etiqueta" invisible='0' readonly='1'/>

				<label for="alto_papel" string="Largo / Ancho de Hoja" />
			        <div class="o_row" id="richo_alto_ancho" readonly='1'>
				    <field name="alto_papel" style="max-width:30px" readonly='1'/> / 
                                    <field name="ancho_papel" style="max-width:30px" readonly='1'/>
                                </div>

				<label for="largo_interno" attrs="{'invisible':[('rota_etiqueta','=',True)]}" string="Largo / Ancho Sin Rotar" />
			        <div class="o_row" id="richo_alto_ancho1" readonly='1' attrs="{'invisible':[('rota_etiqueta','=',True)]}" >
					<field name="largo_interno" style="max-width:30px" attrs="{'invisible':[('rota_etiqueta','=',True)]}" readonly='1'/> / 
					<field name="ancho_interno" style="max-width:30px" attrs="{'invisible':[('rota_etiqueta','=',True)]}" readonly='1'/>
                                </div>
				<label for="largo_interno" attrs="{'invisible':[('rota_etiqueta','=',False)]}" string="Largo / Ancho Rotado" />
			        <div class="o_row" id="richo_alto_ancho2" readonly='1' attrs="{'invisible':[('rota_etiqueta','=',False)]}">
					<field name="ancho_interno" style="max-width:30px" attrs="{'invisible':[('rota_etiqueta','=',False)]}" readonly='1'/> / 
					<field name="largo_interno" style="max-width:30px" attrs="{'invisible':[('rota_etiqueta','=',False)]}" readonly='1'/>
                                </div>

				<label for="gap" string="Gap / SX / Márgen"/>
			        <div class="o_row" id="richo_espacios" >
				    <field name="gap" readonly='1' style="max-width:30px"/> / <field name="sx" style="max-width:30px" readonly='1'/> / <field name="rf" style="max-width:30px" readonly='1'/>
                                </div>
                                <field name="etiquetas_al_desarrollo" string="Etiquetas al largo" readonly='1'/>
                                <field name="etiquetas_al_ancho" readonly='1'/>
                                <field name="etiquetas_x_hoja" readonly='1'/>
			    </group>
		            <group>
                                <field name="n_hojas" readonly='1'/>
                                <field name="n_hojas_con_merma" readonly='1'/>
			    </group>
			</group>
		    </page>
		</notebook>
                <footer>
                    <button name="add_product" string="Guardar" type="object" class="oe_highlight" />
                    <button string="Cancelar" special="cancel" />
                </footer>

            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_select_products_view">
        <field name="name">Configuración de Producto</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">select.products</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.actions.act_window.view" id="act_open_select_products_view_form">
        <field name="act_window_id" ref="act_open_select_products_view" />
        <field name="sequence" eval="10" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_select_products_form" />
    </record>
</odoo>
