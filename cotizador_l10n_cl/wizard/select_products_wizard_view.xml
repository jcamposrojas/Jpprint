<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_select_products_form" model="ir.ui.view">
        <field name="name">select.products.form</field>
        <field name="model">select.products</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Configura Producto">
	    <sheet name="product_form">
	        <div class="oe_title">
                    <label for="nombre_producto" string="Nombre Producto"/>
                    <h2>
                        <div class="d-flex">
                            <field name="nombre_producto" readonly="1" placeholder="Nombre Producto"/>
                        </div>
                    </h2>
                    <label for="codigo" string="Código"/>
                    <h2>
                        <div class="row">
                            <div class="col">
                                <field name="codigo" readonly="1" placeholder="Código"/>-NNNNN
			    </div>
                            <div class="col">
				    <button name="web.action_report_layout_preview" type="action" class="oe_link" icon="fa-arrow-right">
				        <field name="count_coincidencias" nolabel="1" readonly="1" placeholder="Nombre Producto"/><span> coincidencia(s)</span>
				    </button>
			    </div>
                        </div>
                    </h2>
		</div>

                <group>
                    <group>
                        <field name="producto_id" />
                        <field name="codigo_producto" invisible="1"/>
			<field name="sustrato_id" />
                        <field name="texto_adicional" placeholder="Texto Adicional"/>

			<label for="cantidad" string="Cantidad" />
			<div class="o_row" id="cantidad_uom" >
                            <field name="cantidad" />
                            <field name="product_uom_id" nolabel="1"/>
                        </div>

			<field name="area_ocupada" />
                        <field name="merma_estimada"/>
			<field name="area_ocupada_con_merma" />
			<!--
                        <field name="merma_estimada" widget="percentage"/>
			-->
                    </group>
                    <group>
			<label for="largo" string="Avance X Ancho" />
			<div class="o_row" id="largo_ancho" >
                            <field name="largo" />X<field name="ancho" />
                            <span><field name="uom_id" readonly="1" nolabel="1"/></span>
                        </div>
			<field name="adhesivo_id" />
                        <field name="datos_adicionales" />
			<field name="currency_id" invisible='1'/>
			<field name="precio_total" string='COSTO TOTAL ($)'/>
			<field name="precio_unitario" string='COSTO UNITARIO ($)' widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>
                </group>
		<notebook>
		    <page string="General" name="general_information">
			<group>
			<div class='row' style="padding-left:20px">
			    <div class="col-6">
			        <group string="AISA">
				<div>
			            <div class="row">
				        <label for="indica_aisa" string="Indica AISA?" />
                                        <field string='Indica AISA?' name="indica_aisa" />
				    </div>
			            <div class="row" attrs="{'invisible':[('indica_aisa','!=',True)]}">
				        <field class="d-flex flex-wrap" name="aisa_id" nolabel='1' widget="radio_image_aisa" options="{'horizontal': true}"/>
			            </div>
			        </div>
			        </group>
		            </div>
			    <div class="col-6">
			        <group string="BUJE">
                                    <field name="buje_id" />
                                    <field name="etiquetas_x_rollo"/>
                                    <field name="salidas_x_rollo"/>
			        </group>
			        <group string="ADICIONALES">
                                <field name="adicional_ids" nolabel='1' domain="[('producto_id','=',producto_id)]">
				    <tree editable='bottom'>
                                        <field name="add_data" invisible='1'/>
                                        <field name="name" />
					<field name="data" attrs="{'readonly':[('add_data','!=',True)]}"/>
				    </tree>		
				</field>
			        </group>
				<!--
                                <field name="adicional_ids"  widget="many2many_tags" />
                                <field name="rotulado_embalaje" />
                                <field name="efecto_espejo" />
                                <field name="laminado" />
                                <field name="folia" />
				-->
		            </div>
		        </div>
		        </group>
		    </page>
		    <page string="Materias Primas" name="insumos">
			<group>
			    <field name="insumo_ids" nolabel="1" readonly='1'>
		                <tree options="{'no_create': True}">
                                    <field name="product_product_id" invisible="1"/>
				    <field name="name" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="cantidad"/>
                                    <field name="uom_id" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="costo_unitario" invisible="1"/>
                                    <field name="costo_consumo" attrs="{'readonly': [('product_product_id','!=',False)]}" sum="Costo Total"/>
                                    <field name="merma" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="incluido_en_ldm" attrs="{'readonly': [('product_product_id','!=',False)]}"/>
                                    <field name="flag_adicional" invisible="1"/>
                                </tree>
	                    </field>


		        </group>
		    </page>
		    <page string="Cálculo de parámetros" attrs="{'invisible':[('codigo_producto','!=','ETB'),('codigo_producto','!=','EF')]}">
		        <group>
		            <group>
                                <field name="engranaje"/>
                                <field name="etiquetas_al_desarrollo"/>
                                <field name="etiquetas_al_ancho"/>
                                <field name="gap"/>
			    </group>
		            <group>
                                <field name="z_calculado"/>
				<label for="z_ingreso" string="Troquel / Z / Cilindros" />
			        <div class="o_row" id="z_unidades" >
					<field name="troquel" style="max-width:100px"/> / <field name="z_ingreso" style="max-width:20px"/> / <field name="cilindros"/>
                                </div>
                                <field name="etiqueta_con_gap"/>
                                <field name="gap_etiqueta"/>

				<label for="ss" string="SS / SX / RF" />
			        <div class="o_row" id="ancho_ss_sx" >
					<field name="ss" style="max-width:20px"/> / <field name="sx" style="max-width:20px"/> / <field name="rf" style="max-width:20px" readonly="1"/>
                                </div>
                                <field name="ancho_bobina"/>
                                <field name="ancho_papel" readonly='1'/>
                                <field name="longitud_papel"/>
		            </group>
		        </group>
		    </page>
		    <page string="Cálculo de parámetros" attrs="{'invisible':[('codigo_producto','!=','EDJ')]}">
		        <group>
		            <group>
                                <field name="ancho_papel" readonly='1'/>
                                <field name="etiquetas_al_ancho" readonly='1'/>
			    </group>
		            <group>
                                <field name="longitud_papel"/>
			    </group>
			</group>
		    </page>
		    <page string="Cálculo de parámetros" attrs="{'invisible':[('codigo_producto','!=','EIMTTR'),('codigo_producto','!=','EDP'),('codigo_producto','!=','DPVC'),('codigo_producto','!=','IMD'),('codigo_producto','!=','IMDP')]}">
		        <group>
		            <group>
                                <field name="etiquetas_al_ancho"/>
                                <field name="gap"/>
			    </group>
		            <group>
                                <field name="etiqueta_con_gap"/>
				<label for="ss" string="SS / SX / RF" />
			        <div class="o_row" id="ancho_ss_sx" >
					<field name="ss" style="max-width:20px"/> / <field name="sx" style="max-width:20px"/> / <field name="rf" style="max-width:20px" readonly="1"/>
                                </div>
                                <field name="ancho_bobina" string="Ancho Calculado"/>
                                <field name="ancho_papel" readonly='1'/>
                                <field name="longitud_papel"/>
			    </group>
			</group>
		    </page>
		</notebook>
                <footer>
                    <button name="add_product" string="Guardar" type="object" class="oe_highlight" />
                    <button string="Cancelar" special="cancel" />
                </footer>

            </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_select_products_view">
        <field name="name">Configuración de Producto</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">select.products</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record model="ir.actions.act_window.view" id="act_open_select_products_view_form">
        <field name="act_window_id" ref="act_open_select_products_view" />
        <field name="sequence" eval="10" />
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_select_products_form" />
    </record>
</odoo>
