<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="insumo_cotizador_tree" model="ir.ui.view">
            <field name="name">cotizador_insumo_tree</field>
            <field name="model">cotizador.insumo</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="cantidad"/>
                    <field name="uom_id"/>
                    <field name="costo_unitario" invisible="1"/>
                    <field name="costo_consumo" sum="Costo Total"/>
                    <field name="merma"/>
                    <field name="incluido_en_ldm"/>
                    <field name="flag_adicional" invisible="1"/>
                </tree>

            </field>
        </record>

    </data>
</odoo>
