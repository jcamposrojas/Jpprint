<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="ShowParametrosWidget">
	<t t-if="count_parametros > 0">
	    <div class="row" style="width:100%;">
	        <div class="col-4">
	        <table>
		   <tr><td><strong>Largo</strong></td><td>:</td><td><t t-esc="data.largo"/></td></tr>
		   <tr><td><strong>Ancho</strong></td><td>:</td><td><t t-esc="data.ancho"/></td></tr>
		   <tr><td><strong>Texto adicional</strong></td><td>:</td><td><t t-esc="data.texto_adicional"/></td></tr>
		   <tr><td><strong>AISA</strong></td><td>:</td><td><t t-esc="data.aisa"/></td></tr>
		   <tr><td><strong>Longitud Papel</strong></td><td>:</td><td><t t-esc="data.longitud_papel"/></td></tr>
		   <tr><td><strong>Area Ocupada</strong></td><td>:</td><td><t t-esc="data.area_ocupada"/></td></tr>
		   <tr><td style="white-space:nowrap"><strong>Area ocupada con merma</strong></td><td>:</td><td><t t-esc="data.area_ocupada_con_merma"/></td></tr>
	        </table>
	        </div>
	        <div class="col-4">
	        <t t-if="param.area_negocio == '1' or param.area_negocio == '3'">
	        <table style="width:100%">
		    <tr><td><strong>Paso Engranaje</strong></td><td>:</td><td><t t-esc="param.engranaje"/></td></tr>
		    <tr><td><strong>Etiquetas al desarrollo</strong></td><td>:</td><td><t t-esc="param.etiquetas_al_desarrollo"/></td></tr>
		    <tr><td><strong>Etiquetas al ancho</strong></td><td>:</td><td><t t-esc="param.etiquetas_al_ancho"/></td></tr>
		    <tr><td><strong>GAP entre etiquetas</strong></td><td>:</td><td><t t-esc="param.gap_etiqueta"/></td></tr>
		    <tr><td><strong>Z calculado</strong></td><td>:</td><td><t t-esc="param.z_calculado"/></td></tr>
		    <tr><td style="white-space:nowrap"><strong>Troquel / Z / Cilindros</strong></td><td>:</td><td style="white-space:nowrap"><t t-esc="param.troquel+'/'+param.z_ingreso + '/' + param.cilindros"/></td></tr>
	            <tr><td><strong>Etiqueta con GAP</strong></td><td>:</td><td><t t-esc="param.etiqueta_con_gap"/></td></tr>
	            <tr><td><strong>GAP de etiqueta</strong></td><td>:</td><td><t t-esc="param.gap_etiqueta"/></td></tr>
		    <tr><td><strong>SS / SX / RF</strong></td><td>:</td><td style="white-space:nowrap"><t t-esc="param.ss + '/'+param.sx+'/'+param.rf"/></td></tr>
	            <tr><td><strong>Ancho Bobina (LX)</strong></td><td>:</td><td><t t-esc="param.ancho_bobina"/></td></tr>
	        </table>
                </t>
	        <t t-if="param.area_negocio == '2'">
	        <table>
		    <tr><td><strong>Ancho Papel</strong></td><td>:</td><td><t t-esc="param.ancho_papel"/></td></tr>
	        </table>
                </t>
	        </div>
	        <div class="col-4">
	        <table>
		    <tr><td><strong>Comentarios</strong></td><td>:</td><td><t t-esc="data.datos_adicionales"/></td></tr>
	        </table>
	        </div>
	    </div>
	    <br/>
            <table style="width:100%;">
            <tr>
		    <th style="text-align:left;padding-right:5px;padding-left:5px"><strong>Producto</strong></th>
		    <th style="text-align:right;padding-right:5px;padding-left:5px"><strong>Cantidad</strong></th>
		    <th style="text-align:right;padding-right:5px;padding-left:5px"><strong>UdM</strong></th>
		    <th style="text-align:right;padding-right:5px;padding-left:5px"><strong>Monto</strong></th>
		    <th style="text-align:right;padding-right:5px;padding-left:5px"><strong>Merma</strong></th>
		    <th style="text-align:right;white-space: nowrap;padding-right:5px;padding-left:5px"><strong>En LdM</strong></th>
		    <th style="text-align:right;padding-right:5px;padding-left:5px"><strong>Adicional</strong></th>
	    </tr>
            <t t-foreach="lines" t-as="line">
                <tr>
                    <td style="text-align:left;white-space: nowrap;padding-right:5px;padding-left:5px">
                        <t t-esc="line.producto"/>
                    </td>
                    <td style="text-align:right;padding-right:5px;padding-left:5px">
			<t t-esc="line.cantidad"/>
                    </td>
                    <td style="text-align:right;padding-right:5px;padding-left:5px">
			    <t t-esc="line.uom"/>
                    </td>
                    <td style="text-align:right;white-space: nowrap;padding-right:5px;padding-left:5px">
                        <t t-esc="line.moneda + ' ' + line.monto"/>
                    </td>
                    <td style="text-align:right;padding-right:5px;padding-left:5px">
			    <t t-esc="line.merma"/>
                    </td>
                    <td style="text-align:right;padding-right:5px;padding-left:5px">
                        <t t-if="line.incluido_en_ldm">
			    <span>SI</span>
		        </t>
			<t t-else="">
			    <span>NO</span>
		        </t>
                    </td>
                    <td style="text-align:right;">
			<t t-if="line.flag_adicional">
			    <span>SI</span>
		        </t>
			<t t-else="">
			    <span>NO</span>
		        </t>
                    </td>
                </tr>
            </t>
            </table>
        </t>
	<t t-else="">Sin parametros.</t>
    </t>

</templates>

