<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_payment_term_form_documentado" model="ir.ui.view">
            <field name="name">account.payment.term.form.documentado</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"></field>
            <field name="arch" type="xml">

	        <xpath expr="//field[@name='l10n_cl_sii_code']" position="after">
			<field name="documentado" attrs="{'invisible':[('l10n_cl_sii_code','!=','2')]}" />
		</xpath>

            </field>
        </record>

    </data>
</odoo>
